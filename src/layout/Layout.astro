<style>
	:global(*) {
		box-sizing: border-box;
	}
	body {
		font-family: sans-serif;
		margin: 0;
		font-family: 'Barlow', sans-serif;
		font-size: 14px;
	}
	.Menu {
		display: flex;
		padding: 12px;
		align-items: center;
		position: fixed;
		background: white;
		width: 100%;
		z-index: 2;
    top: 0;
	}
	.Menu .logo {
		margin-right: auto;
	}
	.Menu .icon {
		margin-left: auto;
	}
	.Menu .nav a {
		display: block;
		text-decoration: none;
		font-family: 'Barlow Condensed', sans-serif;
		text-transform: uppercase;
		font-size: 18px;
		color: black;
	}
	.Menu .nav {
		display: none;
		/* display: flex; */
		background: white;
		position: fixed;
		top: 64px;
		left: 0;
		padding: 5px 16px 10px;
		width: 100%;
		justify-content: space-between;
	}
	.Menu .nav.open {
		display: flex;
	}
	footer {
		background-color: #4F4F4F;
		padding: 20px;
		display: flex;
		flex-wrap: wrap;
	}
	footer div:first-child {
		width: 100%;
		margin-bottom: 10px;
	}
	footer div {
		display: flex;
		flex-direction: column;
		align-items: start;
		width: 50%;
	}
	footer div:last-child {
		margin-top: 20px;
	}
	footer a {
		color: white;
		text-decoration: none;
		opacity: 0.6;
		display: inline-block;
		margin-bottom: 5px;
	}
	footer a:first-child {
		opacity: 1;
	}
	@media (min-width: 600px) {
		body {
			font-size: 16px;
		}
		.Menu {
			padding-left: 24px;
			padding-right: 60px;
		}
		.Menu .logo {
			height: 50px;
		}
		.Menu .icon {
			display: none;
		}
		.Menu .nav {
			display: flex;
			position: unset;
			justify-content: flex-end;
			padding: 0;
		}
		.Menu .nav a {
			display: block;
			margin-left: 60px;
			text-decoration: none;
			font-family: 'Barlow Condensed', sans-serif;
			text-transform: uppercase;
			font-size: 18px;
			color: black;
		}
		footer {
      margin-top: 120px; 
			padding: 60px 120px;
			justify-content: space-between;
		}
		footer img {
			height: 40px;
		}
		footer div:nth-child(n) {
			width: auto;
		}
		footer div:last-child {
			margin-top: 0;
			margin-right: 120px;
		}
	}
</style>

<script>
  const icon = document.querySelector('.icon')
  const nav = document.querySelector('.nav')

  icon.addEventListener('click', () => {
    nav.classList.toggle('open')
  })
</script>
