---
import Layout from '../layout/Layout.astro'
import image from '../images/matt-benson-rHbob_bEsSs-unsplash.jpg'
---

<Layout>
	<main>
		<img src={image} alt="">
		<div class="Section">
			<h1>Services</h1>
			<div class="service">
				<div class="content">
					<img src="icons/order.svg" alt="" class="service">
					<h2>Complete Farm Order</h2>
					<p>Source raw agricultural products directly from farmers from over 50 countries in Africa</p>
					<a href="/services/complete-farm-order">Get started now</a>
				</div>
			</div>
			<div class="service">
				<div class="content">
					<img src="icons/go.svg" alt="" class="service">
					<h2>EasyGo Fulfillment</h2>
					<p>We make it easy to manage your logistics and deliver raw agricultural products efficiently</p>
					<a href="">Get started now</a>
				</div>
			</div>
			<div class="service">
				<div class="content">
					<img src="icons/engage.svg" alt="" class="service">
					<h2>Farmer Engagement</h2>
					<p>Site under construction. Please, contact us for swift response</p>
					<a href="">Contact</a>
				</div>
			</div>
			<div class="service">
				<div class="content">
					<img src="icons/connect.svg" alt="" class="service">
					<h2>Farmers Link</h2>
					<p>Site under construction. Please, tell us if youâ€™re a farmer, farm manager or group representative to fill a survey for better engagements and services</p>
					<a href="">Contact</a>
				</div>
			</div>
		</div>
	</main>
</Layout>

<style lang="scss">
	main {
    @media (min-width: 600px) {
      display: flex;
    }
  }
  main > img {
    display: block;
    width: 100%;
    height: 144px;
    opacity: 0.2;
    object-fit: cover;
    object-position: top;
    @media (min-width: 600px) {
      opacity: 1;
      position: sticky;
      top: 0;
      width: 45%;
      height: 100vh;
    }
  }
  main > div {
    padding: 20px;
    position: relative;
    top: -40px;
    @media (min-width: 600px) {
      margin-top: 77px;
      padding: 120px 160px 0 80px;
