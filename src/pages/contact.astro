---
import Layout from '../layout/Layout.astro'
import image from '../images/the-artboard-eBEi9TFRGY8-unsplash.jpg'
---

<Layout>
  <main>
    <img src={image} alt="">
    <form action="https://us-central1-cft-africa.cloudfunctions.net/contact-form" method="post">
      <h1>Contact</h1>
      <div>
        <span>
          <label for="first_name">First Name</label>
          <input name="first_name" type="text">
        </span>
        <span>
          <label for="last_name">Last Name</label>
          <input name="last_name" type="text">
        </span>
      </div>
      <label for="email">Email</label>
      <input name="email" type="text">
      <label for="company">Company (optional)</label>
      <input name="company" type="text">
      <label for="message">Message</label>
      <textarea name="message" rows="8"></textarea>
      <button type="submit">Submit</button>
    </form>
  </main>
</Layout>

<style lang="scss">
  main {
    @media (min-width: 600px) {
      display: flex;
    }
  }
  img {
    display: block;
    width: 100%;
    height: 144px;
    opacity: 0.2;
    object-fit: cover;
    object-position: top;
    @media (min-width: 600px) {
      opacity: 1;
      position: sticky;
      top: 0;
      width: 45%;
      height: 100vh;
    }
  }
  form {
    padding: 20px;
    position: relative;
    top: -40px;
    @media (min-width: 600px) {
      margin-top: 77px;
      padding: 120px 160px 0 80px;
      flex-grow: 1;
      div {
        display: flex;
        span {
          width: 50%;
        }
        :first-child {
          margin-right: 15px;
        }
      }
    }
  }
  h1 {
    margin-top: 0;
    margin-bottom: 20px;
		font-family: 'Barlow Condensed', sans-serif;
		text-transform: uppercase;
		font-size: 32px;
    @media (min-width: 600px) {
      font-size: 40px;
    }
  }
  label {
    color: #4F4F4F;
    display: inline-block;
    margin-bottom: 5px;
  }
  input, textarea {
		font-family: 'Barlow', sans-serif;
    font-size: 14px;
    border: 1px solid #D9D9D9;
    border-radius: 5px;
    padding: 10px;
    width: 100%;
    margin-bottom: 10px;
    @media (min-width: 600px) {
      font-size: 16px;
    }
  }
  button {
    width: 100%;
		background: #B63E06;
		border: none;
		color: white;
		padding: 12px 30px;
		font-weight: bold;
		font-size: 14px;
		border-radius: 5px;
    margin-top: 10px;
    font-family: 'Barlow', sans-serif;
    cursor: pointer;
    @media (min-width: 600px) {
      font-size: 16px;
      max-width: 320px;
    }
	}
</style>

